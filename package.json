{
  "name": "weather-subscription",
  "version": "0.0.1",
  "description": "a weather subscription app",
  "type": "module",
  "main": "src/index.ts",
  "private": true,
  "author": "https://github.com/allohamora",
  "scripts": {
    "prepare": "husky",
    "dev": "tsx watch --clear-screen=false src/index.tsx",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "migrations:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.6",
    "croner": "^9.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "fast-jwt": "^6.0.1",
    "hono": "^4.7.9",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "resend": "^4.5.1",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-beautiful-sort": "^3.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,json,yml,md}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allohamora/weather-subscription.git"
  },
  "bugs": {
    "url": "https://github.com/allohamora/weather-subscription/issues"
  },
  "homepage": "https://github.com/allohamora/weather-subscription#readme",
  "engines": {
    "node": ">=v22.13.0",
    "npm": ">=10.9.2"
  },
  "packageManager": "npm@10.9.2"
}
